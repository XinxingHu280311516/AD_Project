<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DashboardActivity">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/red_color"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/expense_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpenseTrack"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboard_overview_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Overview"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_below="@id/expense_track_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Total Expenses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/total_expenses_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Expenses"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_expenses_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$4,500"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_below="@id/total_expenses_title"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>

            <!-- Budget Progress -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/track_spending_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track spending"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/budget_progress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_below="@id/track_spending_title"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/budget_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/budget_progress_title"
                    android:layout_marginBottom="8dp"
                    android:progress="67"
                    android:progressTint="@color/red_color"
                    style="?android:attr/progressBarStyleHorizontal" />

                <TextView
                    android:id="@+id/budget_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67%"
                    android:layout_below="@id/budget_progress_bar"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <!-- Expense Categories -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/expense_categories_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense Categories"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Add your pie chart view here -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/expense_categories_title"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>

            <!-- Top Expenses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/top_expenses_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Expenses"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/groceries_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groceries - $1,200"
                    android:layout_below="@id/top_expenses_title"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/rent_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent - $1,000"
                    android:layout_below="@id/groceries_expense"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/utilities_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilities - $300"
                    android:layout_below="@id/rent_expense"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/transportation_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transportation - $200"
                    android:layout_below="@id/utilities_expense"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enter Expense"
                    android:backgroundTint="@color/red_color"
                    android:textColor="#FFFFFF"
                    android:layout_margin="4dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Expense Report"
                    android:backgroundTint="@color/red_color"
                    android:textColor="#FFFFFF"
                    android:layout_margin="4dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Budget Plan"
                    android:backgroundTint="@color/red_color"
                    android:textColor="#FFFFFF"
                    android:layout_margin="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
